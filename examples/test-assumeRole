resource "aws_iam_role" "test_role" {
  name = "test_role"

  # Terraform's "jsonencode" function converts a
  # Terraform expression result to valid JSON syntax.
  assume_role_policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Action = "sts:AssumeRole"
        Effect = "Allow"
        Sid    = ""
        Principal = {
          Service = "ec2.amazonaws.com"
        }
      },
    ]
  })

  tags = {
    tag-key = "tag-value"
  }
}

resource "aws_iam_role" "testAssumeRole" {
  name = "test_role"

  # Terraform's "jsonencode" function converts a
  # Terraform expression result to valid JSON syntax.
  assumeRolePolicyDocument: {
			Version: "2012-10-17",
			Statement: [
				{
					Sid: Statement1,
					Action: sts:AssumeRole,
					Effect: Allow,
          Condition: {
						StringEquals: {
							sts:ExternalId: a633a1be-b9e4-4898-b7dd-c7d7163a9692
						}
					},
					Principal: {
						AWS: arn:aws:iam::188619942792:root
					}
				}
			]
		}
	},
  tags = {
    tag-key = "tag-value"
  }
}
